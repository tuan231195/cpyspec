{
    "compilerOptions": {
        "moduleResolution": "node",
        "module": "CommonJS",
        "target": "es6",
        "declaration": true,
        "outDir": "dist",
        "allowJs": true,
        "allowSyntheticDefaultImports": true,
        "esModuleInterop": true,
        "downlevelIteration": true,
        "noImplicitAny": false,
        "strict": true,
        "skipLibCheck": true,
        "baseUrl": "./src",
        "sourceMap": true,
        "paths": {
            "src/*": ["*"]
        },
        "plugins": [
            { "transform": "typescript-transform-paths" },
            {
                "transform": "typescript-transform-paths",
                "afterDeclarations": true
            }
        ]
    },
    "include": ["src"],
    "exclude": ["src/**/*.spec.ts"]
}
